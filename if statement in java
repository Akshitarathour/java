class ifcondition{
     public static void main (String args[])
    { int x,y;
        x=10;
        y=20;
        System.out.println("initial value:x="+x+",y=" +y);
        if(x<y)
        System.out.println("x is less than y");
        x=x*2;
        if(x==y)
        System.out.println("x is now equal to y");
        x=x*2;
        if(x>y)
        System.out.println("x is now greater than y");
    }
}
